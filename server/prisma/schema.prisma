generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum type_user {
  ADMIN
  PROFESSOR
  STUDENT
  PARENTS
}

model Users {
  user_id   String   @id @default(cuid())
  name      String
  email     String
  password  String
  type_user type_user
  state     Boolean
  createdAt DateTime
  updatedAt DateTime
}

model Students {
  student_id String   @id @default(cuid())
  grade      String
  section    String
  state      Boolean
  createdAt  DateTime
  updatedAt  DateTime
}

model Messages{
  message_id String @id @default(cuid())
  message    String
  state      Boolean
  createdAt  DateTime
  updatedAt  DateTime
}
